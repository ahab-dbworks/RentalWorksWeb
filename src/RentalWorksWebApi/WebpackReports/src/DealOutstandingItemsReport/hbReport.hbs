<!--Deal Outstanding Items Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th class="text">Order No.</th>
        <th class="text">Order Date</th>
        <th class="text">Order Description</th>
        <th class="text">I-Code</th>
        <th class="text">Item Description</th>
        <th class="text">Contract No.</th>
        <th class="text">PO No.</th>
        <th class="number">Quantity</th>
        {{#ifEquals ShowBarcodes true}}
          <th class="text">Bar Code</th>
        {{/ifEquals}}
        {{#ifEquals ShowVendors true}}
          <th class="text">Vendor</th>
        {{/ifEquals}}
        {{#ifEquals ShowResponsiblePerson true}}
          <th class="text">Responsible Person</th>
        {{/ifEquals}}
        {{#ifEquals IncludeValue true}}
          <th class="number">Unit Value</th>
        {{/ifEquals}}
        {{#ifEquals ShowImages true}}
         {{#ifEquals ../IncludeThumbnailImages true}}
          <th class="text">Image</th>
         {{/ifEquals}}
        {{/ifEquals}}
      </tr>
    </thead>
    <tbody>
      {{#each this.rows}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "OfficeLocationheader"}}
         <td colspan="5" class="header-row">Office: {{OfficeLocation}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "OrderNumberheader"}}
          <td colspan="5" class="lower header-row">OrderNumber: {{OrderNumber}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Customerheader"}}
          <td colspan="5" class="lower header-row">Customer: {{Customer}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Dealheader"}}
          <td colspan="5" class="lower header-row">Deal: {{Deal}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
          <td class="text" data-value="{{OrderNumber}}"></td>
          <td class="text" data-value="{{OrderDate}}"></td>
          <td class="text" data-value="{{OrderDescription}}"></td>
          <td class="text" data-value="{{ICode}}"></td>
          <td class="text" data-value="{{Description}}"></td>
          <td class="text" data-value="{{ContractNumber}}"></td>
          <td class="text" data-value="{{PoNumber}}"></td>
          <td class="number" data-value="{{Quantity}}"></td>
          {{#ifEquals ../ShowBarcodes true}}
            <td class="text" data-value="{{BarCode}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../ShowVendors true}}
            <td class="text" data-value="{{Vendor}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../ShowResponsiblePerson true}}
            <td class="text" data-value="{{ResponsiblePerson}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../IncludeValueCost "R"}}
            <td class="number" data-value="{{ReplacementCost}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../IncludeValueCost "U"}}
            <td class="number" data-value="{{UnitValue}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../IncludeValueCost "P"}}
            <td class="number" data-value="{{PurchaseAmount}}"></td>
          {{/ifEquals}}
          {{#ifEquals ../ShowImages true}}
            {{#ifEquals ../IncludeThumbnailImages true}}
              {{#if Image}}
                <td><div style="width:50px;"><img id="base64img" src="{{Image}}" alt="image" style="display:block;width:100%;height:auto;"/></div>
              {{else}}
                <td></td>
              {{/if}}
            {{/ifEquals}}
          {{/ifEquals}}
        {{/ifEquals}}
        {{#ifEquals RowType "Dealfooter"}}
          <td colspan="7" style="font-weight:bold;text-align:right;padding-top:11px">{{Deal}}&nbsp;</td>
          <td class="total-row number" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Customerfooter"}}
          <td colspan="7" style="font-weight:bold;text-align:right;padding-top:11px">{{Customer}}&nbsp;</td>
          <td class="total-row number" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "OrderNumberfooter"}}
          <td colspan="7" style="font-weight:bold;text-align:right;padding-top:11px">{{OrderNumber}}&nbsp;</td>
          <td class="total-row number" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "OfficeLocationfooter"}}
          <td colspan="7" style="font-weight:bold;text-align:right;padding-top:11px">{{OfficeLocation}}&nbsp;</td>
          <td class="total-row number" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
          <td colspan="7" style="font-weight:bold;text-align:right;padding-top:11px">Grand Total:&nbsp;</td>
          <td class="total-row number" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
      </tr>
      <tr>
        {{#ifEquals RowType "detail"}}
          {{#ifEquals ../ShowImages true}}
            {{#ifEquals ../IncludeFullImages true}}
              {{#if Image}}
                <td colspan="7">
                  <div style="width:250px;"><img id="base64img" src="{{Image}}" alt="image" style="display:block;width:100%;height:auto;"/></div>
                </td>
              {{else}}
                <td></td>
              {{/if}}
            {{/ifEquals}}
          {{/ifEquals}}
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>