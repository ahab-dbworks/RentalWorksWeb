<!--Invoice Report-->
<div class="rpt-flexrow" style="margin:5px 0px 0px 4px;">
  <div class="rpt-flexcolumn" style="padding-bottom:5px;">
    {{#if Logosrc}}
    <div style="height:130px;"><img class="clientlogo" src="{{Logosrc}}" style="display:block;width:auto;height:100%;" alt="logo" /></div>
    {{else}}
    <div></div>
    {{/if}}
    <span class="header-left" style="font-weight:600">{{Company}}</span>
    <span class="header-left">{{OfficeLocationAddress1}}</span>
    <span class="header-left">{{OfficeLocationAddress2}}</span>
    <span class="header-left">{{OfficeLocationCityStateZipCodeCountry}}</span>
    <span class="header-left"><span style="font-weight:600;">Phone: </span>{{OfficeLocationPhone}}</span>
    <span class="header-left"><span style="font-weight:600;">Fax: </span>{{OfficeLocationFax}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="title blue">{{Report}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="header-right blue" style="font-size:30px;"><span style="font-weight:600;padding-right:8px;">No: </span><span style="background-color:#DCDCDC;color:black;border:3px solid #0798ee;padding:3px;">{{InvoiceNumber}}</span></span>
    <span style="font-size:18px;padding-top:5px;" class="header-right blue"><span style="font-weight:600;padding-right:49px;">Invoice Date: </span><span style="color:black;">{{OrderDate}}</span></span>
    <span style="font-size:18px;padding-top:5px;" class="header-right blue"><span style="font-weight:600;padding-right:61px;">Due Date: </span><span style="color:black;">needField{{BLANK}}</span></span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:10px;padding-left:3px;">
  <div class="rpt-flexcolumn">
    <div class="rpt-meta-header"><span>Billed To:</span></div>
    <div class="rpt-meta-address">
      <span class="header-left">{{BillToName}}</span>
      {{#if BillToAttention}}
      <span class="header-left">c/o {{BillToAttention}}</span>
      {{/if}}
      <span class="header-left">{{BillToAddress1}}</span>
      <span class="header-left">{{BillToAddress2}}</span>
      <span class="header-left">{{BillToCityStateZipCodeCountry}}</span>
      <span class="header-left"><span style="font-weight:600;">Phone: </span>needField{{blank}}</span>
      <span class="header-left"><span style="font-weight:600;">Fax: </span>needField{{blank}}</span>
    </div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">Ordered By:</span>
        <span class="header-left">Phone:</span>
        <span class="header-left">Email:</span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">Location: </span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
    <div class="rpt-meta-header"><span>Delivered To:</span></div>
    <div class="rpt-meta-address">
      <span class="header-left">{{BillToName}}</span>
      {{#if BillToAttention}}
      <span class="header-left">c/o {{BillToAttention}}</span>
      {{/if}}
      <span class="header-left">{{BillToAddress1}}</span>
      <span class="header-left">{{BillToAddress2}}</span>
      <span class="header-left">{{BillToCityStateZipCodeCountry}}</span>
      <span class="header-left"><span style="font-weight:600;">Phone: </span>needField{{blank}}</span>
      <span class="header-left"><span style="font-weight:600;">Fax: </span>needField{{blank}}</span>
    </div>
  </div>
  <div class="rpt-flexcolumn middle">
    <span style="padding:10px;"></span>
  </div>
  <div class="rpt-flexcolumn">
    <div class="rpt-meta-header"><span>Remit To:</span></div>
    <div class="rpt-meta-address">
      <span class="header-left">{{BillToName}}</span>
      {{#if BillToAttention}}
      <span class="header-left">c/o {{BillToAttention}}</span>
      {{/if}}
      <span class="header-left">{{BillToAddress1}}</span>
      <span class="header-left">{{BillToAddress2}}</span>
      <span class="header-left">{{BillToCityStateZipCodeCountry}}</span>
      <span class="header-left"><span style="font-weight:600;">Phone: </span>needField{{blank}}</span>
      <span class="header-left"><span style="font-weight:600;">Fax: </span>needField{{blank}}</span>
    </div>
    <div class="rpt-meta-header"><span>Order Details:</span></div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">Order:</span>
        <span class="header-left">Deal:</span>
        <span class="header-left">Customer:</span>
        <span class="header-left">Customer Type:</span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">PO No:</span>
        <span class="header-left">Reference No:</span>
        <span class="header-left">Terms:</span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">Usage:</span>
        <span class="header-left">Billing:</span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
    <div class="rpt-meta-section">
      <div class="shaded-block">
        <span class="header-left">Agent:</span>
        <span class="header-left">Phone:</span>
        <span class="header-left">Email:</span>
      </div>
      <div class="right-text-block">
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
        <span class="header-left">{{BillingCycle}}</span>
      </div>
    </div>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:25px;">
  <table>
    <thead>
      <tr>
        <th class="text">I-Code</th>
        <th class="text">Description</th>
        <th class="number">Quantity</th>
        <th class="number">Period Extended</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "RecTypeDisplayheader"}}
        <td colspan="8" class="blue" style="border: .1em dashed blue;font-weight:bold;text-align:left;padding-top:11px">{{RecTypeDisplay}}&nbsp;</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text">{{ICode}}</td>
        <td class="text">{{Description}}</td>
        <td class="number">{{QuantityOrdered}}</td>
        <td class="number">{{PeriodExtended}}</td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>