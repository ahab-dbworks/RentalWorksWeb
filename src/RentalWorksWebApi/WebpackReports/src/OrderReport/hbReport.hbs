<!--Order Report-->
<div class="rpt-flexrow" style="margin-top:5px;"> 
  <div class="rpt-flexcolumn">
    <span class="header-left" style="font-weight:600">{{Company}}</span>
    <span class="header-left">{{OfficeLocationAddress1}}</span>
    <span class="header-left">{{OfficeLocationAddress2}}</span>
    <span class="header-left">{{OfficeLocationCityStateZipCodeCountry}}</span>
    <span class="header-left">Phone: {{OfficeLocationPhone}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="title">{{Report}}</span>
    <span class="header-center">Order Date: {{OrderDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="header-right" style="font-size:30px;">Order No: <span style="border:1px solid black;padding:2px;">{{OrderNumber}}</span></span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:25px;">
  <table class="sub-header">
    <tr>
      <td class="header-left">Description: <span style="font-weight:600;">{{Description}}</span></td>
      <td class="header-center">Billing Period: {{BillingDates}}</td>
      <td class="header-right">Usage Period: {{UsageDates}}</td>
    </tr>
    <tr>
      <td class="header-left">PO No: {{PoNumber}}</td>
      <td class="header-center">Billing Cycle: {{BillingCycle}}</td>
      <td class="header-right">Terms: {{PaymentTerms}}</td>
    </tr>
    <tr>
      <td class="header-left">Customer: {{Customer}}</td>
      <td class="header-center">Deal No: {{DealNumber}}</td>
      <td class="header-right">{{Deal}}</td>
    </tr>
    <tr>
      <td class="header-left">Agent: {{Agent}}</td>
      <td class="header-center">Email: {{AgentEmail}}</td>
      <td class="header-right">Phone / Ext: {{AgentPhoneAndExtension}}</td>
    </tr>
  </table>
</div>
<div class="rpt-flexrow" style="margin-top:25px;">
  <table>
    <thead>
      <tr>
        <th class="text" style="text-align:left;">Issued To</th>
        <th class="text" style="text-align:center;">Outgoing (DELIVER)</th>
        <th class="text" style="text-align:right;">Incoming (DELIVER)</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td id="issuedTo" class="text" style="text-align:left;">
          <div>
            {{IssuedToCompany}}
          </div>
          <div>
            {{IssuedToAttention1}}
          </div>
          <div>
            {{IssuedToAttention2}}
          </div>
          <div>
            {{IssuedToAddress1}}
          </div>
          <div>
            {{IssuedToAddress2}}
          </div>
          <div>
            {{IssuedToCity}}, {{IssuedToState}} {{IssuedToZipCode}} {{IssuedToCountry}}
          </div>
          <div>
            Phone: {{IssuedToPhone}}
          </div>
          <div>
            Fax: {{IssuedToFax}}
          </div>
        </td>
        <td id="outgoing" class="text" style="text-align:center;">
          <div>
            Attention: {{OutDeliveryAttention}}
          </div>
          <div>
            {{OutDeliveryAddress1}}
          </div>
          <div>
            {{OutDeliveryAddress2}}
          </div>
          <div>
            {{OutDeliveryCity}}, {{OutDeliveryState}} {{OutDeliveryZipCode}} {{OutDeliveryCountry}}
          </div>
          <div>
            Phone: {{OutDeliveryContactPhone}}
          </div>
          <div>
            Required By: {{OutDeliveryRequiredByDateTime}}
          </div>
        </td>
        <td id="incoming" class="text" style="text-align:right;">
          <div>
            Attention: {{InDeliveryAttention}}
          </div>
          <div>
            {{InDeliveryAddress1}}
          </div>
          <div>
            {{InDeliveryAddress2}}
          </div>
          <div>
            {{InDeliveryCity}}, {{InDeliveryState}} {{InDeliveryZipCode}} {{InDeliveryCountry}}
          </div>
          <div>
            Contact: {{InDeliveryContact}}
          </div>
          <div>
            Phone: {{InDeliveryContactPhone}}
          </div>
          <div>
            Required By: {{InDeliveryRequiredByDateTime}}
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="rpt-flexrow" style="margin-top:25px;">
  <table>
    <thead>
      <tr>
        <th class="text">I-Code</th>
        <th class="text">Description</th>
        <th class="number">Quantity</th>
        <th class="number">Period Extended</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "RecTypeDisplayheader"}}
        <td colspan="8" style="font-weight:bold;text-align:left;padding-top:11px">{{RecTypeDisplay}}&nbsp;</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text">{{ICode}}</td>
        <td class="text">{{Description}}</td>
        <td class="number">{{QuantityOrdered}}</td>
        <td class="number">{{PeriodExtended}}</td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>