<!--Order Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="order-header-left">{{Company}}</span>
    <span class="order-header-left">{{OfficeLocationAddress1}}</span>
    <span class="order-header-left">{{OfficeLocationAddress2}}</span>
    <span class="order-header-left">{{OfficeLocationCityStateZipCodeCountry}}</span>
    <span class="order-header-left">Phone: {{OfficeLocationPhone}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="order-title">{{Report}}</span>
    <span class="order-header-center">Order Date: {{OrderDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="order-header-right" style="font-size:30px;">Order No: {{OrderNumber}}</span>
    <span class="order-header-right" style="font-family:'Libre Barcode 39 Text', serif; font-size:42px;">{{OrderNumber}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table class="sub-header">
    <tr>
      <td class="order-header-left">Usage Period: {{UsageDates}}</td>
      <td class="order-header-center">Billing Period: {{BillingDates}}</td>
      <td class="order-header-right"></td>
    </tr>
    <tr>
      <td class="order-header-left"></td>
      <td class="order-header-center">Description: {{Description}}</td>
      <td class="order-header-right">PO No.: {{PoNumber}}</td>
    </tr>
    <tr>
      <td class="order-header-left">Customer: {{Customer}}</td>
      <td class="order-header-center"></td>
      <td class="order-header-right">Terms: {{PaymentTerms}}</td>
    </tr>
    <tr>
      <td class="order-header-left">Deal: {{DealNumber}}</td>
      <td class="order-header-center">{{Deal}}</td>
      <td class="order-header-right">Billing Cycle: {{BillingCycle}}</td>
    </tr>
    <tr>
      <td class="order-header-left">Agent: {{Agent}}</td>
      <td class="order-header-center">Email: {{AgentEmail}}</td>
      <td class="order-header-right">Phone No/Ext.: {{AgentPhoneAndExtension}}</td>
    </tr>
  </table>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th class="text">I-Code</th>
        <th class="text">Description</th>
        <th class="number">Quantity</th>
        <th class="number">Period Extended</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "RecTypeDisplayheader"}}
        <td colspan="8" style="font-weight:bold;text-align:left;padding-top:11px">{{RecTypeDisplay}}&nbsp;</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text">{{ICode}}</td>
        <td class="text">{{Description}}</td>
        <td class="number">{{QuantityOrdered}}</td>
        <td class="number">{{PeriodExtended}}</td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>