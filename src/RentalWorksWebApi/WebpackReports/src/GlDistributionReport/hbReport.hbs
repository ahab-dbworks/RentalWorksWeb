<!--G/L Distribution Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">From: {{FromDate}} To: {{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <!--SUMMARY VIEW TABLE-->
  {{#ifEquals IsSummary true}}
  <table>
    <thead>
      <tr>
        <th>G/L No.</th>
        <th>Account Description</th>
        <th class="number">Debit</th>
        <th class="number">Credit</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype="{{RowType}}">
        {{#ifEquals RowType "Locationheader"}}
        <td colspan="5" class="header-row">Location: {{Location}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "GroupHeadingheader"}}
        <td colspan="4" class="header-row">{{GroupHeading}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td data-value="{{AccountNumber}}"></td>
        <td data-value="{{AccountDescription}}"></td>
        <td class="number" data-value="{{Debit}}"></td>
        <td class="number" data-value="{{Credit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "GroupHeadingfooter"}}
        <td colspan="2" class="total-name">{{GroupHeading}}&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Locationfooter"}}
        <td colspan="2" class="total-name">{{Location}}&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/ifEquals}}
  <!--SOME DETAIL VIEW TABLE-->
  {{#ifEquals IsSomeDetail true}}
  <table>
    <thead>
      <tr>
        <th colspan="2">G/L No.</th>
        <th colspan="3">Account Description</th>
        <th class="number">Debit</th>
        <th class="number">Credit</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      {{#ifEquals RowType "Locationheader"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="7" class="header-row">Location: {{Location}}</td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "GroupHeadingheader"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="7" class="header-row">{{GroupHeading}}</td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "AccountNumberheader"}}
      <tr data-rowtype="{{RowType}}">
        <td class="lower header-row" data-value="{{AccountNumber}}"></td>
        <td></td>
        <td class="lower header-row" colspan="5" data-value="{{AccountDescription}}"></td>
      </tr>
      <tr>
        <th class="no-border"></th>
        <th class="sub-header">Invoice No.</th>
        <th class="sub-header">Date</th>
        <th class="sub-header" colspan="2">Deal</th>
        <th class="sub-header number">Debit</th>
        <th class="sub-header number">Credit</th>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "detail"}}
      <tr data-rowtype="{{RowType}}">
        <td class="no-border"></td>
        <td data-value="{{InvoiceNumber}}"></td>
        <td data-value="{{GlDate}}"></td>
        <td colspan="2" data-value="{{Deal}}"></td>
        <td class="number" data-value="{{Debit}}"></td>
        <td class="number" data-value="{{Credit}}"></td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "AccountNumberfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4"></td>
        <td class="total-name">{{AccountNumber}}&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "GroupHeadingfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4"></td>
        <td class="total-name">{{GroupHeading}}&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "Locationfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4"></td>
        <td class="total-name">{{Location}}&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
      </tr>
      {{/ifEquals}}
      {{/each}}
    </tbody>
  </table>
  {{/ifEquals}}
  <!--FULL DETAIL VIEW TABLE-->
  {{#ifEquals IsFullDetail true}}
  <table>
    <thead>
      <tr>
        <th>G/L No.</th>
        <th>Date</th>
        <th>Account Description</th>
        <th>Invoice No.</th>
        <th>Deal</th>
        <th>Item Description</th>
        <th class="number">Debit</th>
        <th class="number">Credit</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype="{{RowType}}">
        {{#ifEquals RowType "Locationheader"}}
        <td colspan="5" class="header-row">Location: {{Location}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "GroupHeadingheader"}}
        <td colspan="4" class="header-row">{{GroupHeading}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "AccountNumberheader"}}
      <td colspan="4" class="lower header-row">{{AccountNumber}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="no-border"></td>
        <td data-value="{{GlDate}}"></td>
        <td data-value="{{AccountDescription}}"></td>
        <td data-value="{{InvoiceNumber}}"></td>
        <td data-value="{{Deal}}"></td>
        <td data-value="{{ItemDescription}}"></td>
        <td class="number" data-value="{{Debit}}"></td>
        <td class="number" data-value="{{Credit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "AccountNumberfooter"}}
        <td colspan="6" class="total-name">{{AccountNumber}}:&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "GroupHeadingfooter"}}
        <td colspan="6" class="total-name">{{GroupHeading}}:&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Locationfooter"}}
        <td colspan="6" class="total-name">{{Location}}:&nbsp;</td>
        <td class="total-val" data-value="{{Debit}}"></td>
        <td class="total-val" data-value="{{Credit}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/ifEquals}}
</div>