<!--Rental Inventory Catalog Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">{{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th class="text">I-Code</th>
        <th class="text">Description</th>
        <th class="text">Type</th>
        <th class="text">Tracked By</th>
        <th class="number">Quantity Owned</th>
        <th class="number">Daily Rate</th>
        <th class="number">Weekly Rate</th>
        <th class="number">Monthly Rate</th>
        <th class="number">Replacement Cost</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype="{{RowType}}">
        {{#ifEquals RowType "Warehouseheader"}}
        <td colspan="5" class="header-row">Warehouse: {{Warehouse}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypeheader"}}
        <td colspan="5" class="lower header-row">Inventory Type: {{InventoryType}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryheader"}}
        <td colspan="5" class="lower header-row">Category: {{Category}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text" data-value="{{ICode}}"></td>
        <td class="text" data-value="{{Description}}"></td>
        <td class="text" data-value="{{ClassificationDescription}}"></td>
        <td class="text" data-value="{{TrackedBy}}"></td>
        <td class="number" data-value="{{QuantityOwned}}"></td>
        <td class="number" data-value="{{DailyRate}}"></td>
        <td class="number" data-value="{{WeeklyRate}}"></td>
        <td class="number" data-value="{{MonthlyRate}}"></td>
        <td class="number" data-value="{{ReplacementCost}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryfooter"}}
        <td colspan="8" class="total-name">{{Category}}</td>
        <td class="total-val" data-value="{{QuantityOwned}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypefooter"}}
        <td colspan="8" class="total-name">{{InventoryType}}</td>
        <td class="total-val" data-value="{{QuantityOwned}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Warehousefooter"}}
        <td colspan="8" class="total-name">{{Warehouse}}</td>
        <td class="total-val" data-value="{{QuantityOwned}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="8" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{QuantityOwned}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>