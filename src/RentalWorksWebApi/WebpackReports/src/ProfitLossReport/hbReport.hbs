<!--ProfitLossReport-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">From: {{FromDate}} To: {{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th>Order No.</th>
        <th>Deal</th>
        <th>Description</th>
        <th>Location</th>
        <th class="number">Revenue</th>
        <th class="number">Expenses</th>
        <th class="number">Profit</th>
        <th class="number">Profit %</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "OfficeLocationheader"}}
        <td colspan="3" class="header-row">Office: {{OfficeLocation}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Agentheader"}}
        <td colspan="3" class="lower header-row">Agent: {{Agent}}</td>
        {{/ifEquals}}
                {{#ifEquals RowType "Customerheader"}}
        <td colspan="3" class="lower header-row">Customer: {{Customer}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td data-value="{{OrderNumber}}"></td>
        <td data-value="{{Deal}}"></td>
        <td data-value="{{Description}}"></td>
        <td data-value="{{OrderLocation}}"></td>
        <td class="number" data-value="{{Revenue}}"></td>
        <td class="number" data-value="{{Expenses}}"></td>
        <td class="number" data-value="{{Profit}}"></td>
        <td class="number" data-value="{{ProfitPercentage}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Agentfooter"}}
        <td colspan="4" class="total-name">{{Agent}}&nbsp;</td>
        <td class="total-val" data-value="{{Revenue}}"></td>
        <td class="total-val" data-value="{{Expenses}}"></td>
        <td class="total-val" data-value="{{Profit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "OfficeLocationfooter"}}
        <td colspan="4" class="total-name">{{OfficeLocation}}&nbsp;</td>
        <td class="total-val" data-value="{{Revenue}}"></td>
        <td class="total-val" data-value="{{Expenses}}"></td>
        <td class="total-val" data-value="{{Profit}}"></td>
        {{/ifEquals}}
              {{#ifEquals RowType "Customerfooter"}}
        <td colspan="4" class="total-name">{{Customer}}&nbsp;</td>
        <td class="total-val" data-value="{{Revenue}}"></td>
        <td class="total-val" data-value="{{Expenses}}"></td>
        <td class="total-val" data-value="{{Profit}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="4" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{Revenue}}"></td>
        <td class="total-val" data-value="{{Expenses}}"></td>
        <td class="total-val" data-value="{{Profit}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>