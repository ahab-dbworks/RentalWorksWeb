<!-- Vendor Invoice Batch Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">Batch No: {{BatchNumber}} - Date: {{Date}}</span>
  </div>
  <div class="rpt-flexcolumn">
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:25px;">
  <table>
    <thead class="mainHeader">
      <tr class="columnheadings">
        <th>Invoice No.</th>
        <th>Invoice Date</th>
        <th>PO No.</th>
        <th style="text-align:right;">Total</th>
      </tr>
    </thead>
    <tbody>
      {{#with Items}}
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "Locationheader"}}
        <td colspan="4" class="rowHeader">Office: {{Location}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Vendorheader"}}
        <td colspan="4" class="rowHeader">Vendor: {{Vendor}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="InvoiceNumber">{{InvoiceNumber}}</td>
        <td class="InvoiceDate">{{InvoiceDate}}</td>
        <td class="PurchaseOrderNumber">{{PurchaseOrderNumber}}</td>
        <td class="InvoiceTotal" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Vendorfooter"}}
        <td colspan="3" style="font-weight:bold;text-align:right;padding-top:11px">{{Vendor}}:</td>
        <td class="total-row number" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Locationfooter"}}
        <td colspan="3" style="font-weight:bold;text-align:right;padding-top:11px">{{Location}}:</td>
        <td class="total-row number" data-value="{{InvoiceTotal}}"><td>
        {{/ifEquals}}
        {{#ifEquals RowType "invoicetotal"}}
        <td colspan="3" class="invoiceTotalRowTitle">Total for Batch {{../../BatchNumber}}:</td>
        <td class="total-row invoiceTotalRowTotal" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
      {{/with}}
    </tbody>
  </table>
</div>