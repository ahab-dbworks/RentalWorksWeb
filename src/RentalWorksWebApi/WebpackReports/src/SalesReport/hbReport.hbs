        <td colspan="2" class="total-val" data-value="{{Extended}}"></td>
        <td class="total-val" data-value="{{Tax}}"></td>
        <td class="total-val" data-value="{{Total}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="3" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        <td colspan="2" class="total-val" data-value="{{Extended}}"></td>
        <td class="total-val" data-value="{{Tax}}"></td>
        <td class="total-val" data-value="{{Total}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/ifEquals}}
</div>