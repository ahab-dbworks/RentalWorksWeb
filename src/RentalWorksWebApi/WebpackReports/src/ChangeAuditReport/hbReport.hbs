<!--Change Audit Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">From: {{FromDate}} To: {{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table style="max-width:1110px;">
    <thead class="main-header">
      <tr>
        <th>Date/Time</th>
        <th>Record Title</th>
        <th colspan="3">Changes</th>
      </tr>
    </thead>
    {{#each this}}
    {{#ifEquals RenderModuleHeader true}}
    <thead>
      <tr data-rowtype="ModuleNameHeader">
        <th class="header-row" colspan="3">Module: {{ModuleName}}</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RenderUserHeader true}}
    <thead>
      <tr data-rowtype="UserNameHeader">
        <th class="lower header-row" colspan="3">User: {{UserName}}</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RowType "detail"}}
    <tbody data-rowtype="{{RowType}}">
      <tr>
        <td data-value="{{DateStamp}}"></td>
        <td data-value="{{RecordTitle}}"></td>
        <td class="header-row">Field Name</td>
        <td class="header-row">Old Value</td>
        <td class="header-row">New value</td>
      </tr>
      {{#each Json}}
      <tr>
        <td colspan="2"></td>
        <td data-value="{{FieldName}}"></td>
        <td data-value="{{OldValue}}"></td>
        <td data-value="{{NewValue}}"></td>
      </tr>
    {{/each}}
    </tbody>
    {{/ifEquals}}
    {{/each}}
  </table>
</div>