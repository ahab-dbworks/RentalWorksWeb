<!--Sales Inventory Transaction Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">From: {{FromDate}} To: {{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th>Warehouse</th>
        <th>Description</th>
        <th>Date</th>
        <th>User</th>
        <th>Type</th>
        <th>Transaction No.</th>
        <th class="number">Quantity</th>
        <th class="number">Cost</th>
        <th class="number">Cost Extended</th>
        <th class="number">Sell Price</th>
        <th class="number">Sell Extended</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "ICodeheader"}}
        <td colspan="5" class="header-row">I-Code: {{ICode}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td data-value="{{WarehouseCode}}"></td>
        <td data-value="{{Description}}"></td>
        <td data-value="{{TransactionDate}}"></td>
        <td data-value="{{UsersName}}"></td>
        <td data-value="{{TransactionType}}"></td>
        <td data-value="{{TransactionNumber}}"></td>
        <td class="number" data-value="{{Quantity}}"></td>
        <td class="number" data-value="{{UnitCost}}"></td>
        <td class="number" data-value="{{CostExtended}}"></td>
        <td class="number" data-value="{{UnitPrice}}"></td>
        <td class="number" data-value="{{PriceExtended}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "ICodefooter"}}
        <td colspan="6" class="total-name">{{ICode}}&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="6" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>