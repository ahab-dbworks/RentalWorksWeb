<!--Vendor Invoice Summary Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">From: {{FromDate}} To: {{ToDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th class="text">Invoice No.</th>
        <th class="text">Invoice Date</th>
        <th class="text">Deal</th>
        <th class="text">PO Description</th>
        <th class="text">Billing Start</th>
        <th class="text">Billing End</th>
        <th class="text">Status</th>
        <th class="number">Invoice Total</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "OfficeLocationheader"}}
        <td colspan="5" class="header-row">Office: {{OfficeLocation}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Departmentheader"}}
        <td colspan="5" class="lower header-row">Department: {{Department}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Vendorheader"}}
        <td colspan="5" class="lower header-row">Vendor: {{Vendor}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "PurchaseOrderNumberheader"}}
        <td colspan="5" class="lower header-row">PO No: {{PurchaseOrderNumber}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text" data-value="{{InvoiceNumber}}"></td>
        <td class="text" data-value="{{InvoiceDate}}"></td>
        <td class="text" data-value="{{Deal}}"></td>
        <td class="text" data-value="{{PurchaseOrderDescription}}"></td>
        <td class="text" data-value="{{BillingStartDate}}"></td>
        <td class="text" data-value="{{BillingEndDate}}"></td>
        <td class="text" data-value="{{Status}}"></td>
        <td class="number" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Vendorfooter"}}
        <td colspan="7" class="total-name">{{Vendor}}&nbsp;</td>
        <td class="total-val" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "PurchaseOrderNumberfooter"}}
        <td colspan="7" class="total-name">{{PurchaseOrderNumber}}&nbsp;</td>
        <td class="total-val" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Departmentfooter"}}
        <td colspan="7" class="total-name">{{Department}}&nbsp;</td>
        <td class="total-val" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "OfficeLocationfooter"}}
        <td colspan="7" class="total-name">{{OfficeLocation}}&nbsp;</td>
        <td class="total-val" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="7" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{InvoiceTotal}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>