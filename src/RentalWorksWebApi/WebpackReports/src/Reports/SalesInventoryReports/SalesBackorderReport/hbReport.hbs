<!--SalesBackorderReport-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">As Of: {{Today}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th>I-Code</th>
        <th>Description</th>
        <th>Contract Date</th>
        <th>Contract No.</th>
        <th>Customer</th>
        <th>Vendor</th>
        <th>Deal</th>
        <th>Order No.</th>
        <th class="number">Qty Ordered</th>
        <th class="number">Qty Backordered</th>
        <th class="number">Total Out</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "Warehouseheader"}}
        <td colspan="5" class="header-row">Warehouse: {{Warehouse}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypeheader"}}
        <td colspan="5" class="lower header-row">Inventory Type: {{InventoryType}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryheader"}}
        <td colspan="5" class="lower header-row">Category: {{"Category"}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="nowrap" data-value="{{ICode}}"></td>
        <td data-value="{{Description}}"></td>
        <td data-value="{{ContractDate}}"></td>
        <td data-value="{{ContractNumber}}"></td>
        <td data-value="{{Customer}}"></td>
        <td data-value="{{Vendor}}"></td>
        <td data-value="{{Deal}}"></td>
        <td data-value="{{OrderNumber}}"></td>
        <td class="number" data-value="{{QuantityOrdered}}"></td>
        <td class="number" data-value="{{QuantityBackordered}}"></td>
        <td class="number" data-value="{{QuantityTotalOut}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryfooter"}}
        <td colspan="8" class="total-name">{{Category}}:&nbsp;</td>
        <td class="total-val" data-value="{{QuantityOrdered}}"></td>
        <td class="total-val" data-value="{{QuantityBackordered}}"></td>
        <td class="total-val" data-value="{{QuantityTotalOut}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypefooter"}}
        <td colspan="8" class="total-name">{{InventoryType}}:&nbsp;</td>
        <td class="total-val" data-value="{{QuantityOrdered}}"></td>
        <td class="total-val" data-value="{{QuantityBackordered}}"></td>
        <td class="total-val" data-value="{{QuantityTotalOut}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Warehousefooter"}}
        <td colspan="8" class="total-name">{{Warehouse}}:&nbsp;</td>
        <td class="total-val" data-value="{{QuantityOrdered}}"></td>
        <td class="total-val" data-value="{{QuantityBackordered}}"></td>
        <td class="total-val" data-value="{{QuantityTotalOut}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="8" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{QuantityOrdered}}"></td>
        <td class="total-val" data-value="{{QuantityBackordered}}"></td>
        <td class="total-val" data-value="{{QuantityTotalOut}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>