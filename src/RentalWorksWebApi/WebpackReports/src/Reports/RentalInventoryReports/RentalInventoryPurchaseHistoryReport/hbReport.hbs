<!--Rental Inventory Purchase History Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
     {{#ifEquals showPurchaseDates true}}
       <span class="rpt-header-center">Purchased From: {{PurchasedFromDate}} To: {{PurchasedToDate}}</span>
     {{/ifEquals}}
     {{#ifEquals showReceiveDates true}}
       <span class="rpt-header-center">Received From: {{ReceivedFromDate}} To: {{ReceivedToDate}}</span>
     {{/ifEquals}}
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th>I-Code</th>
        <th>Description</th>
        <th>Purchased</th>
        <th>Received</th>
        <th>Vendor</th>
        <th class="number">Quantity</th>
        <th>Bar Code</th>
        <th>Serial No.</th>
        <th>RFID</th>
        <th class="number">Unit Cost</th>
        <th class="number">Ext. Cost</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "Warehouseheader"}}
        <td colspan="5" class="header-row">Warehouse: {{Warehouse}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypeheader"}}
        <td colspan="5" class="lower header-row">Inventory Type: {{"InventoryType"}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryheader"}}
        <td colspan="5" class="lower header-row">Category: {{Category}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td data-value="{{ICode}}"></td>
        <td data-value="{{Description}}"></td>
        <td data-value="{{PurchaseDate}}"></td>
        <td data-value="{{ReceiveDate}}"></td>
        <td data-value="{{Vendor}}"></td>
        <td class="number" data-value="{{Quantity}}"></td>
        <td data-value="{{BarCode}}"></td>
        <td data-value="{{SerialNumber}}"></td>
        <td data-value="{{RfId}}"></td>
        <td class="number" data-value="{{UnitCost}}"></td>
        <td class="number" data-value="{{ExtendedCost}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Categoryfooter"}}
        <td colspan="5" class="total-name">{{Category}}&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        <td colspan="5" class="total-val" data-value="{{ExtendedCost}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "InventoryTypefooter"}}
        <td colspan="5" class="total-name">{{InventoryType}}&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        <td colspan="5" class="total-val" data-value="{{ExtendedCost}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "Warehousefooter"}}
        <td colspan="5" class="total-name">{{Warehouse}}&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        <td colspan="5" class="total-val" data-value="{{ExtendedCost}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="5" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{Quantity}}"></td>
        <td colspan="5" class="total-val" data-value="{{ExtendedCost}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>