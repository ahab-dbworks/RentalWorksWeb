<!--Order Depleting Deposit Receipt Report-->
<!-- Header -->
<div class="rpt-flexrow" style="margin:5px 0px 0px 4px;">
  <div class="rpt-flexcolumn" style="flex:0 0 30%;padding-bottom:5px;">
    {{#if Logosrc}}
    <div style="height:100px;">
      <img class="clientlogo" src="{{Logosrc}}" style="display:block;width:auto;height:100%;" alt="logo" />
    </div>
    {{else}}
    <div></div>
    {{/if}}
    <span style="font-weight:600; font-size:15px;">{{OfficeLocationCompany}}</span>
    <span class="company-header">{{OfficeLocationAddress1}}</span>
    {{#if OfficeLocationAddress2}}
    <span class="company-header">{{OfficeLocationAddress2}}</span>
    {{/if}}
    <span class="company-header">{{OfficeLocationCityStateZipCodeCountry}}</span>
    <span class="company-header"><span style="font-weight:600;">Phone: </span>{{OfficeLocationPhone}}</span>
    {{#if OfficeLocationFax}}
    <span class="company-header"><span style="font-weight:600;">Fax: </span>{{OfficeLocationFax}}</span>
    {{/if}}
  </div>
  <div class="rpt-flexcolumn" style="flex:0 0 40%;">
    <div class="sub-title" style="font-size:20px;">{{Department}}</div>
    <div class="title" style="text-align:center;">Depleting Deposit<br />Receipt</div>
  </div>
  <div class="rpt-flexcolumn" style="flex:0 0 30%;">
    <table>
      <tr>
        <td style="width:50%;color:black;font-size:18px;font-weight:700;text-align:right;padding:2em 0 0 0;">Receipt Date:</td>
        <td style="font-size:18px;text-align:center;padding:2em 0 0 0;">{{ArDate}}</td>
      </tr>
    </table>
  </div>
</div>
<div class="rpt-flexrow" style="padding-left:3px;">
  <div class="rpt-flexcolumn sectionBorder" style="flex:1 1 auto;margin-right:10px;">
    <table>
      <tr>
        <td style="width:84px;" class="shaded-block">Customer: </td>
        <td class="meta-content" style="vertical-align:top;">{{Customer}}</td>
      </tr>
      <tr>
        <td style="width:84px;" class="shaded-block">Deal: </td>
        <td class="meta-content" style="vertical-align:top;">{{Deal}}</td>
      </tr>
    </table>
  </div>
  <div class="rpt-flexcolumn sectionBorder" style="flex:0 0 300px;margin:0px 10px;">
    <table>
      <tr>
        <td style="width:114px;" class="shaded-block">Payment Type: </td>
        <td class="meta-content">{{PaymentType}}</td>
      </tr>
      <tr>
        <td style="width:114px;" class="shaded-block">Reference No: </td>
        <td class="meta-content">{{AuthorizationCode}}</td>
      </tr>
    </table>
  </div>
  <div class="rpt-flexcolumn sectionBorder" style="flex:0 0 100px;margin-left:10px;">
    <table>
      <tr>
        <td style="width:80px;" class="shaded-block">Amount:</td>
        <td class="">{{PaymentAmount}}</td>
      </tr>
      <tr>
        <td style="width:80px;" class="shaded-block">Currency:</td>
        <td class="">{{CurrencyCode}}</td>
      </tr>
    </table>
  </div>
</div>

<div data-section="table" data-itemarray="Items" class="rpt-flexrow" style="margin-top:25px;">
  <table data-tablename="Detail View">
    <thead id="columnHeader">
      <tr data-row="main-header">
        <th data-linkedcolumn="OrderNo" data-valuefield="Order">Order No.</th>
        <th data-linkedcolumn="OrderDescription" data-valuefield="OrderDescription" class="Description">Order Description</th>
        <th data-linkedcolumn="PeriodTotal" data-valuefield="PeriodTotal" class="alignRight">Period Total</th>
        <th data-linkedcolumn="ReplacementCost" data-valuefield="ReplacementCost" class="alignRight">Replacement Cost</th>
        <th data-linkedcolumn="DepositAmount" data-valuefield="DepositAmount" class="alignRight">Deposit Amount</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
      {{#ifEquals RowType "detail"}}
      <tr data-row="detail" data-rowtype="{{RowType}}" class="description-row">
        <td data-linkedcolumn="OrderNo" data-value="{{OrderNo}}" class="nowrap"></td>
        <td data-linkedcolumn="Description" data-value="{{Description}}" class="Description"></td>
        <td data-linkedcolumn="PeriodTotal" data-value="{{PeriodTotal}}" class="alignRight"></td>
        <td data-linkedcolumn="ReplacementCost" data-value="{{ReplacementCost}}" class="alignRight"></td>
        <td data-linkedcolumn="DepositAmount" data-value="{{DepositAmount}}" class="alignRight"></td>
      </tr>
      {{/ifEquals}}
      {{#ifEquals RowType "grandtotal"}}
      <tr data-row="footer">
        <td data-linkedcolumn="OrderNo" colspan="3"></td>
        <td class="total-name" style="text-align:right;padding-right:10px;font-weight:bold;">DEPOSIT TOTAL:</td>
        <td data-linkedcolumn="DepositAmount" class="number TotalDepositAmount" style="min-width:150px;padding-right:3px;" data-value="$ {{DepositAmount}}"></td>
      </tr>
      {{/ifEquals}}
      {{/each}}
    </tbody>
  </table>
</div>
