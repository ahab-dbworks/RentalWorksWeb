<!--IncomingDelivery-->
{{#each this}}
<div data-section="header">
  <div class="rpt-flexrow">
    <div class="rpt-flexcolumn">
      <div class="rpt-nested-flexrow rpt-header-left"><span>{{System}}</span></div>
    </div>
    <div class="rpt-flexcolumn">
      <div class="rpt-nested-flexrow rpt-title"><span>{{Report}}</span></div>
    </div>
    <div class="rpt-flexcolumn">
      <div class="rpt-nested-flexrow rpt-header-right"><span>{{Company}}</span></div>
    </div>
  </div>
</div> <!--end header-->

<div class="rpt-flexrow">
  <!-- Order details -->
  <div class="rpt-flexcolumn sectionBorder" style="flex:0 0 422px;margin-right:10px;">
    <table>
      <tr>
        <td style="width:90px;" class="shaded-block">Order No.:</td>
        <td class="">{{OnlineOrderNumber}}</td>
      </tr>
      <tr>
        <td style="width:55px;" class="shaded-block">Agent:</td>
        <td class="">{{Agent}}</td>
      </tr>
    </table>
  </div>
  <!-- Agent details -->
  <div class="rpt-flexcolumn sectionBorder" style="flex:0 0 321px;margin:0px 10px;">
    <table>
      <tr>
        <td style="width:55px;" class="shaded-block">Description:</td>
        <td class="">{{OnlineOrderStatus}}</td>
      </tr>
      <tr>
        <td style="width:55px;" class="shaded-block">Phone:</td>
        <td class="">{{AgentPhone}}</td>
      </tr>
    </table>
  </div>
  <!-- Billing Dates, Usage Dates, Terms, Billing Cycle-->
  <div class="rpt-flexcolumn sectionBorder" style="flex:0 0 321px;margin-left:10px;">
    <table>
      <tr>
        <td style="width:90px;;" class="shaded-block">Deal:</td>
        <td class="">{{Deal}}</td>
      </tr>
    </table>
  </div>
</div>

<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <div class="rpt-nested-flexrow rpt-header-left"><span></span></div>
  </div>
  <div class="rpt-flexcolumn">
    <div class="rpt-nested-flexrow rpt-title"><span>{{TargetShipDate}}</span></div>
    <div class="rpt-nested-flexrow rpt-title"><span>{{TargetShipTime}}</span></div>
  </div>
  <div class="rpt-flexcolumn">
    <div class="rpt-nested-flexrow rpt-header-right"><span>{{Company}}</span></div>
  </div>
</div>

<div data-section="header">
  <div class="rpt-flexrow">
    <div class="rpt-flexcolumn"></div>
    <div class="rpt-flexcolumn" style="font-size: 4em; align-items: center;">
      <div class="rpt-nested-flexrow">
        <div class="logo-container"><span><img data-visible="{{#if ../Logosrc}}true{{/if}}" class="logo" src="{{../Logosrc}}" alt="logo" /></span></div>
      </div>
      <div class="rpt-nested-flexrow"><span class="order-no">{{OrderNumber}}</span></div>
      <div class="rpt-nested-flexrow"><span class="location">{{Location}}</span></div>
      <div class="rpt-nested-flexrow"><span>Attn: {{Attention}}</span></div>
      <div class="rpt-nested-flexrow"><span>{{Address1}}</span></div>
      <div class="rpt-nested-flexrow"><span data-visible="{{#if Address2}}true{{/if}}">{{Address2}}</span></div>
      <div class="rpt-nested-flexrow"><span>{{CityStateZipCode}}</span></div>
    </div>
    <div class="rpt-flexcolumn"></div>
  </div>
</div>
{{/each}}
