<!--A/R Aging Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    <span class="rpt-header-center">As of {{AsOfDate}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead id="columnHeader">
      <tr>
        <th data-valuefield="InvoiceNumber">Invoice No.</th>
        <th data-valuefield="InvoiceDate">Invoice Date</th>
        <th data-valuefield="OrderNumber">Order No.</th>
        <th data-valuefield="InvoiceDescription">Invoice Description</th>
        <th data-valuefield="Total" class="number">Total</th>
        <th data-valuefield="Total0030" class="number">Current</th>
        <th data-valuefield="Total3160" class="number">31-60</th>
        <th data-valuefield="Total6190" class="number">61-90</th>
        <th data-valuefield="Total91x" class="number">90</th>
      </tr>
    </thead>
    <tbody>
      {{#each this}}

      {{#ifEquals RowType "OfficeLocationheader"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="12" class="header-row">Office Location: {{OfficeLocation}}</td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "Customerheader"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="12" class="lower header-row">Customer: {{Customer}}</td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "Dealheader"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="12" class="lower header-row">Deal: {{Deal}}</td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "detail"}}
      <tr id="detailRow" data-rowtype="{{RowType}}">
        <td data-value="{{InvoiceNumber}}"></td>
        <td data-value="{{InvoiceDate}}"></td>
        <td data-value="{{OrderNumber}}"></td>
        <td data-value="{{InvoiceDescription}}"></td>
        <td class="number" data-value="{{Total}}"></td>
        <td class="number" data-value="{{Total0030}}"></td>
        <td class="number" data-value="{{Total3160}}"></td>
        <td class="number" data-value="{{Total6190}}"></td>
        <td class="number" data-value="{{Total91x}}"></td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "Dealfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4" class="total-name">{{Deal}}</td>
        <td class="total-val" data-value="{{Total}}"></td>
        <td class="total-val" data-value="{{Total0030}}"></td>
        <td class="total-val" data-value="{{Total3160}}"></td>
        <td class="total-val" data-value="{{Total6190}}"></td>
        <td class="total-val" data-value="{{Total91x}}"></td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "Customerfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4" class="total-name">{{Customer}}</td>
        <td class="total-val" data-value="{{Total}}"></td>
        <td class="total-val" data-value="{{Total0030}}"></td>
        <td class="total-val" data-value="{{Total3160}}"></td>
        <td class="total-val" data-value="{{Total6190}}"></td>
        <td class="total-val" data-value="{{Total91x}}"></td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "OfficeLocationfooter"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4" class="total-name">{{OfficeLocation}}</td>
        <td class="total-val" data-value="{{Total}}"></td>
        <td class="total-val" data-value="{{Total0030}}"></td>
        <td class="total-val" data-value="{{Total3160}}"></td>
        <td class="total-val" data-value="{{Total6190}}"></td>
        <td class="total-val" data-value="{{Total91x}}"></td>
      </tr>
      {{/ifEquals}}

      {{#ifEquals RowType "grandtotal"}}
      <tr data-rowtype="{{RowType}}">
        <td colspan="4" class="total-name">Grand Total:&nbsp;</td>
        <td class="total-val" data-value="{{Total}}"></td>
        <td class="total-val" data-value="{{Total0030}}"></td>
        <td class="total-val" data-value="{{Total3160}}"></td>
        <td class="total-val" data-value="{{Total6190}}"></td>
        <td class="total-val" data-value="{{Total91x}}"></td>
      </tr>
      {{/ifEquals}}

      {{/each}}
    </tbody>
  </table>
</div>