<!--Repair Order Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn" style="flex:0 0 30%;padding-bottom:5px;">
    {{#if Logosrc}}
    <div style="height:100px;">
      <img class="clientlogo" src="{{Logosrc}}" style="display:block;width:auto;height:100%;" alt="logo" />
    </div>
    {{else}}
    <div></div>
    {{/if}}
    <span style="font-weight:600; font-size:15px;">{{OfficeLocationCompany}}</span>
    <span class="company-header">{{OfficeLocationAddress1}}</span>
    {{#if OfficeLocationAddress2}}
    <span class="company-header">{{OfficeLocationAddress2}}</span>
    {{/if}}
    <span class="company-header">{{OfficeLocationCityStateZipCodeCountry}}</span>
    <span class="company-header"><span style="font-weight:600;">Phone: </span>{{OfficeLocationPhone}}</span>
    {{#if OfficeLocationFax}}
    <span class="company-header"><span style="font-weight:600;">Fax: </span>{{OfficeLocationFax}}</span>
    {{/if}}
  </div>
  <div class="rpt-flexcolumn" style="flex:0 0 40%;">
    <span class="sub-title" style="font-size:20px;">{{Department}}</span>
    <span class="title">{{Report}}</span>
  </div>
  <div class="rpt-flexcolumn" style="flex:0 0 30%;">
    <table>
      <tr>
        <td style="width:50%;font-size:18px;font-weight:700;text-align:right;">No:</td>
        <td class="rptNumberSection" style="width:50%;">{{RepairNumber}}</td>
      </tr>
      <tr>
        <td style="width:50%;color:black;font-size:18px;font-weight:700;text-align:right;">Date:</td>
        <td style="font-size:18px;text-align:center;">{{RepairDate}}</td>
      </tr>
      <tr>
        <td style="width:50%;color:black;font-size:18px;font-weight:700;text-align:right;">Status:</td>
        <td style="font-size:18px;text-align:center;">{{Status}}</td>
      </tr>
      <tr>
        <td style="width:50%;color:black;font-size:18px;font-weight:700;text-align:right;">PO No:</td>
        <td style="font-size:18px;text-align:center;">{{PurchaseOrderNumber}}</td>
      </tr>
    </table>
  </div>
</div>

<div class="rpt-flexrow" style="margin-top:25px;">
  <!-- Issued To -->
  <div class="rpt-flexcolumn" style="flex:0 0 40%;margin-right:10px;">
    <table id="issuedTo">
      <tr>
        <th class="sub text" style="text-align:left;padding:5px;">Issued To</th>
      </tr>
      <tr>
        <td class="" style="font-weight:700;">{{IssuedTo}}</td>
      </tr>
      <tr>
        <td class="">{{IssuedToAddress1}}</td>
      </tr>
      {{#if IssuedToAddress2}}
      <tr>
        <td class="">{{IssuedToAddress2}}</td>
      </tr>
      {{/if}}
      {{#if IssuedToCity}}
      <tr>
        <td class="">{{IssuedToCity}}, {{IssuedToState}} {{IssuedToZipCode}} {{IssuedToCountry}}</td>
      </tr>
      {{/if}}
      {{#if IssuedToPhone}}
      <tr>
        <td class="">{{IssuedToPhone}}</td>
      </tr>
      {{/if}}
      {{#if IssuedToFax}}
      <tr>
        <td class="">{{IssuedToFax}}</td>
      </tr>
      {{/if}}
    </table>
  </div>

  <div class="rpt-flexcolumn" style="flex:0 0 58%;margin-left:10px;">
    <table>
      <tr>
        <th class="sub text" colspan="2" style="text-align:left;padding:5px;">Item In Repair</th>
      </tr>
      <tr>
        <td style="width:80px;" class="shaded-block">I-Code: </td>
        <td class="meta-content" style="vertical-align:top;">{{ICode}}</td>
      </tr>
      <tr>
        <td style="width:80px;" class="shaded-block">Qty: </td>
        <td class="meta-content" style="vertical-align:top;">{{Quantity}}</td>
      </tr>
      <tr>
        <td style="width:80px;" class="shaded-block">Description: </td>
        <td class="meta-content" style="vertical-align:top;">{{Description}}</td>
      </tr>
      <tr>
        <td style="width:80px;" class="shaded-block">Bar Code: </td>
        <td class="meta-content">{{BarCode}}</td>
      </tr>
      {{#if SerialNumber}}
      <tr>
        <td class="shaded-block" style="width:90px;">Serial No: </td>
        <td class="meta-content">{{SerialNumber}}</td>
      </tr>
      {{/if}}
      {{#if ContractNumber}}
      <tr>
        <td class="shaded-block" style="width:90px;">Last Contract: </td>
        <td class="meta-content">{{ContractNumber}}</td>
      </tr>
      {{/if}}
      {{#if OrderNumber}}
      <tr>
        <td class="shaded-block" style="width:90px;">Last Order: </td>
        <td class="meta-content">{{OrderNumber}}</td>
      </tr>
      {{/if}}
    </table>
  </div>
</div>

<!--Damage-->
<div class="rpt-flexrow" style="margin-top: 25px;border: 1px solid black;border-radius: 2px;">
  <div class="row-box">
    <div style="font-weight: 700;">Damage:</div>
    <div>{{Damage}}</div>
  </div>
</div>

<!--Correction-->
<div class="rpt-flexrow" style="margin-top: 25px;border: 1px solid black;border-radius: 2px;">
  <div class="row-box">
    <div style="font-weight: 700;">Correction:</div>
    <div>{{Correction}}</div>
  </div>
</div>

<!-- Parts Items -->
<div class="rpt-flexrow section-start">
  <table style="table-layout:fixed;">
    {{#each PartsItems}}
    {{#ifEquals RowType "ItemTypeheader"}}
    <tbody data-rowtype="{{RowType}}">
      <tr class="avoid-page-break">
        <td colspan="7" class="section-header">{{ItemType}}&nbsp;</td>
      </tr>
      <tr class="rectype-header">
        <td style="min-width:115px;">Part No.</td>
        <td style="min-width:379px;">Description</td>
        <td style="min-width:90px;">Unit</td>
        <td style="min-width:90px;" class="number">Quantity</td>
        <td style="min-width:100px;" class="number">Unit Price</td>
        <td style="min-width:140px;" class="number">Extended</td>
      </tr>
    </tbody>
    {{/ifEquals}}
    {{#ifEquals RowType "detail"}}
    <tbody data-rowtype="{{RowType}}">
      <tr data-isbold="{{Bold}}">
        <td>{{ICode}}</td>
        <td>{{Description}}</td>
        <td>{{Unit}}</td>
        <td class="number">{{Quantity}}</td>
        <td class="number">{{Rate}}</td>
        <td class="number">{{Extended}}</td>
      </tr>
      {{#if Note}}
      <tr>
        <td>&nbsp;</td>
        <td colspan="5"><div><div class="note-label">Note:&nbsp;</div><div class="note-cell">{{Note}}</div></div></td>
        <td>&nbsp;</td>
      </tr>
      {{/if}}
    </tbody>
    {{/ifEquals}}
    {{#ifEquals RowType "ItemTypefooter"}}
    {{#ifNotEquals Tax 0}}
    <tr>
      <td colspan="5" class="" style="text-align:right;font-weight:700;padding-top:12px;padding-right:0px;"><span style="padding:11px 5px 3px 6px;border-top:1px solid #000000;">{{ItemType}} Sub-Total</span></td>
      <td class="" style="text-align:right;font-weight:700;border-top: 1px solid black;padding-top:10px;" data-value="{{Extended}}"></td>
    </tr>
    <tr>
      <td colspan="5" class="tax" style="text-align:right;font-weight:700;padding:10px 5px 3px 6px;">{{../Tax1Name}} ({{TaxRate1}}%)</td>
      <td class="tax" style="text-align:right;font-weight:700;padding:10px 5px 3px 6px;" data-value="{{Tax1}}"></td>
    </tr>
    {{#ifNotEquals ../Tax2Name ""}}
    <tr>
      <td colspan="5" class="tax" style="text-align:right;font-weight:700;padding:10px 5px 3px 6px;">{{../Tax2Name}} ({{TaxRate2}}%)</td>
      <td class="tax" style="text-align:right;font-weight:700;padding:10px 5px 3px 6px;" data-value="{{Tax2}}"></td>
    </tr>
    {{/ifNotEquals}}
    {{/ifNotEquals}}
    <tr>
      <td colspan="5" class="" style="text-align:right;font-weight:700;padding-top:12px;padding-right:0px;"><span class="shaded-activity-total" style="padding:11px 5px 3px 41px;border-top:1px solid #000000;">{{ItemType}} Total</span></td>
      <td class="display-footer-total" data-value="{{ExtendedWithTax}}"></td>
    </tr>
    {{/ifEquals}}
    {{/each}}
  </table>
</div>

