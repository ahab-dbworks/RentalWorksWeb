<!--OrdersByDealReport-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="rpt-header-left">{{System}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-title">{{Report}}</span>
    {{#if FilterDatesOrderCreate}}
    <span class="rpt-header-center">Order Create From: {{OrderCreateFromDate}} To: {{OrderCreateToDate}}</span>
    {{/if}}
    {{#if FilterDatesOrderStart}}
    <span class="rpt-header-center">Order Start From: {{OrderStartFromDate}} To: {{OrderStartToDate}}</span>
    {{/if}}
    {{#if FilterDatesDealCredit}}
    <span class="rpt-header-center">Deal Credit Status From: {{DealCreditFromDate}} To: {{DealCreditToDate}}</span>
    {{/if}}
    {{#if FilterDatesDealInsurance}}
    <span class="rpt-header-center">Deal Insurance From: {{DealInsuranceFromDate}} To: {{DealInsuranceToDate}}</span>
    {{/if}}
  </div>
  <div class="rpt-flexcolumn">
    <span class="rpt-header-right">{{Company}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table style="border-top:2px solid black;">
    {{#each this}}
    {{#ifEquals RowType "OfficeLocationheader"}}
    <thead>
      <tr data-rowtype={{RowType}}>
        <th class="header-row no-border" colspan="10">Office Location: {{OfficeLocation}}</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RowType "Departmentheader"}}
    <thead>
      <tr data-rowtype={{RowType}}>
        <th class="lower header-row no-border" colspan="10">Department: {{Department}}</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RowType "Customerheader"}}
    <thead>
      <tr data-rowtype={{RowType}}>
        <th class="lower header-row no-border" colspan="10">Customer: {{Customer}}</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RowType "Dealheader"}}
    <thead>
      <tr data-rowtype={{RowType}}>
        <th>Deal No.</th>
        <th>Deal Type</th>
        <th>Payment Terms</th>
        <th>Start Date</th>
        <th>Close Date</th>
        <th>Credit Status</th>
        <th>Ins. Status</th>
        <th colspan="2">Phone</th>
      </tr>
    </thead>
    <tr>
      <td data-value="{{DealNumber}}"></td>
      <td data-value="{{DealType}}"></td>
      <td data-value="{{DealPaymentTerms}}"></td>
      <td data-value="{{EstimatedStartDate}}"></td>
      <td data-value="{{EstimatedStopDate}}"></td>
      <td data-value="{{CreditStatus}}"></td>
      <td data-value="{{InsuranceStatus}}"></td>
      <td colspan="2" data-value="{{Phone}}"></td>
    </tr>
    <tr>
      <td></td>
      <td colspan="4"><div><span style="font-weight:700;">Address: </span>{{Address1}}&nbsp;{{Address2}}&nbsp;{{City}},&nbsp;{{State}}&nbsp;{{Zip}}&nbsp;{{Country}}</div></td>
      <td colspan="4"><div><span style="font-weight:700;">Primary Contact: </span>{{DealPrimaryContactName}}&nbsp;{{DealPrimaryContactPhone}}&nbsp;{{DealPrimaryContactExt}}</div></td>
    </tr>
    <thead>
      <tr data-rowtype={{RowType}}>
        <th class="no-border"></th>
        <th>Order No.</th>
        <th>Create Date</th>
        <th>Est. Start Date</th>
        <th>Description</th>
        <th>PO No.</th>
        <th class="number">Amount</th>
        <th>Status</th>
        <th>As Of</th>
      </tr>
    </thead>
    {{/ifEquals}}
    {{#ifEquals RowType "detail"}}
    <tbody data-rowtype="{{RowType}}">
      <tr>
        <td style="border:none;background-color:white;"></td>
        <td class="nowrap" data-value="{{OrderNumber}}"></td>
        <td data-value="{{OrderDate}}"></td>
        <td data-value="{{EstimatedStartDate}}"></td>
        <td data-value="{{OrderDescription}}"></td>
        <td data-value="{{PurchaseOrderNumber}}"></td>
        <td class="number" data-value="{{OrderTotal}}"></td>
        <td data-value="{{OrderStatus}}"></td>
        <td data-value="{{OrderStatusDate}}"></td>
      </tr>
    </tbody>
    {{/ifEquals}}
    {{#ifEquals RowType "OfficeLocationfooter"}}
    <tr data-rowtype="{{RowType}}">
      <td colspan="6" class="total-name">{{OfficeLocation}}:&nbsp;</td>
      <td class="total-val" data-value="{{OrderTotal}}"></td>
    </tr>
    {{/ifEquals}}
    {{#ifEquals RowType "Departmentfooter"}}
    <tr data-rowtype="{{RowType}}">
      <td colspan="6" class="total-name">{{Department}}:&nbsp;</td>
      <td class="total-val" data-value="{{OrderTotal}}"></td>
    </tr>
    {{/ifEquals}}
    {{#ifEquals RowType "Dealfooter"}}
    <tr data-rowtype="{{RowType}}">
      <td colspan="6" class="total-name">{{Deal}}:&nbsp;</td>
      <td class="total-val" data-value="{{OrderTotal}}"></td>
    </tr>
    <tr data-rowtype="{{RowType}}">
      <td colspan="2" style="padding-bottom:15px;" class="total-name"></td>
    </tr>
    {{/ifEquals}}
    {{#ifEquals RowType "grandtotal"}}
    <tr data-rowtype="{{RowType}}">
      <td colspan="6" class="total-name">Grand Total:&nbsp;</td>
      <td class="total-val" data-value="{{OrderTotal}}"></td>
    </tr>
    {{/ifEquals}}
    {{/each}}
  </table>
</div>