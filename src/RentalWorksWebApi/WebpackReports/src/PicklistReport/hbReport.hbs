<!--Picklist Report-->
<div class="rpt-flexrow">
  <div class="rpt-flexcolumn">
    <span class="header-left">{{Company}}</span>
    <span class="header-left">Warehouse: {{Warehouse}}</span>
    <span class="header-left">Delivery Type: {{DeliverType}}</span>
    <span class="header-left"> Assigned To: {{Agent}}</span>
    <span class="header-left">Pick Date: {{RequiredDateTime}}</span>
  </div>
  <div class="rpt-flexcolumn">
    <span class="title">{{Report}}</span>
    <span class="header-center">Required By: {{RequiredDate}}</span>
    <span class="header-center">Target Ship: {{TargetShipDate}}</span>
  </div>
    <div class="rpt-flexcolumn">
    <span class="header-right" style="font-size:30px;">Pick No: {{PickNumber}}</span>
    <span class="header-right" style="font-family:'Libre Barcode 39 Text', serif; font-size:42px;">{{OrderNumber}}</span>
  </div>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table class="sub-header">
    <tr>
      <td class="header-left">Start Rental: {{EstimatedStartDate}} {{EstimatedStartTime}}</td>
      <td class="header-center">End Rental: {{EstimatedStopDate}} {{EstimatedStopTime}}</td>
      <td class="header-right">PO No.: {{PoNumber}}</td>
    </tr>
    <tr>
      <td class="header-left">Order: {{OrderNumber}}</td>
      <td class="header-center">Description: {{OrderDescription}}</td>
      <td class="header-right">PO No.: {{PoNumber}}</td>
    </tr>
    <tr>
      <td class="header-left">Customer: {{CustomerNumber}}</td>
      <td class="header-center">{{Customer}}</td>
      <td class="header-right"></td>
    </tr>
    <tr>
      <td class="header-left">Deal: {{DealNumber}}</td>
      <td class="header-center">{{Deal}}</td>
      <td class="header-right"></td>
    </tr>
    <tr>
      <td class="header-left">Agent: {{Agent}}</td>
      <td class="header-center"></td>
      <td class="header-right"></td>
    </tr>
  </table>
</div>
<div class="rpt-flexrow" style="margin-top:40px;">
  <table>
    <thead>
      <tr>
        <th class="text">Order No.</th>
        <th class="text">I-Code</th>
        <th class="text">Description</th>
        <th class="text">Aisle/Shelf</th>
        <th class="number">Ordered</th>
        <th class="number">Out</th>
        <th class="number">Pick</th>
        <th class="number">Picked</th>
        <th class="number">Verified</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
      <tr data-rowtype={{RowType}}>
        {{#ifEquals RowType "RecTypeDisplayheader"}}
        <td colspan="8" style="font-weight:bold;text-align:left;padding-top:11px">{{RecTypeDisplay}}&nbsp;</td>
        {{/ifEquals}}
        {{#ifEquals RowType "detail"}}
        <td class="text">{{OrderNumber}}</td>
        <td class="text">{{ICode}}</td>
        <td class="text">{{Description}}</td>
        <td class="text">{{AisleShelfLocation}}</td>
        <td class="number">{{QuantityOrdered}}</td>
        <td class="number">{{OutQuantity}}</td>
        <td class="number">{{PickQuantity}}</td>
        <td class="number">{{PickQuantity}}</td>
        <td class="number">{{PickQuantity}}</td>
        {{/ifEquals}}
        {{#ifEquals RowType "RecTypeDisplayfooter"}}
        <td colspan="6" style="font-weight:bold;text-align:right;padding-top:11px">{{RecTypeDisplay}}&nbsp;</td>
        <td class="total-row number" data-value="{{PickQuantity}}"></td>
        {{/ifEquals}}
        {{#ifEquals RowType "grandtotal"}}
        <td colspan="6" style="font-weight:bold;text-align:right;padding-top:11px">Grand Total:&nbsp;</td>
        <td class="total-row number" data-value="{{PickQuantity}}"></td>
        {{/ifEquals}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>