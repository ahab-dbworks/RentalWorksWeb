<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <IsTransformWebConfigDisabled>true</IsTransformWebConfigDisabled>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>2018.1.2.1</FileVersion>
    <AppSrcDir>$([System.IO.Path]::GetDirectoryName($(MSBuildProjectDirectory)))</AppSrcDir>
    <AppSolutionDir>$([System.IO.Path]::GetDirectoryName($(AppSrcDir)))</AppSolutionDir>
    <FwApplicationDirectory>$(AppSolutionDir)\src\RentalWorksWebApi</FwApplicationDirectory>
    <AssemblyName>WebApi</AssemblyName>
    <RootNamespace>WebApi</RootNamespace>
    <TypeScriptToolsVersion>3.0</TypeScriptToolsVersion>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netcoreapp2.0\WebApi.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp2.0\WebApi.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Modules\Reports\WebpackReportLibrary\**" />
    <Compile Remove="Modules\Reports\WebpackReports\**" />
    <Compile Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <Compile Remove="Modules\Reports\_lib\**" />
    <Compile Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <Compile Remove="wwwroot\lib\**" />
    <Content Remove="Modules\Reports\WebpackReportLibrary\**" />
    <Content Remove="Modules\Reports\WebpackReports\**" />
    <Content Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <Content Remove="Modules\Reports\_lib\**" />
    <Content Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <Content Remove="wwwroot\lib\**" />
    <EmbeddedResource Remove="Modules\Reports\WebpackReportLibrary\**" />
    <EmbeddedResource Remove="Modules\Reports\WebpackReports\**" />
    <EmbeddedResource Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <EmbeddedResource Remove="Modules\Reports\_lib\**" />
    <EmbeddedResource Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <EmbeddedResource Remove="wwwroot\lib\**" />
    <None Remove="Modules\Reports\WebpackReportLibrary\**" />
    <None Remove="Modules\Reports\WebpackReports\**" />
    <None Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <None Remove="Modules\Reports\_lib\**" />
    <None Remove="WebpackReports\lib\FwReportLibrary\dist\**" />
    <None Remove="wwwroot\lib\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Security\ApplicationSecurity.cs" />
    <Compile Remove="Security\SecurityAttributes.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Modules\Administrator\Designer\Services\" />
    <Folder Include="Security\" />
    <Folder Include="wwwroot\temp\downloads\" />
    <Folder Include="wwwroot\Reports\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="6.2.2" />
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Rewrite" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="2.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="2.5.0" />
  </ItemGroup>
  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="1.0.1" />
  </ItemGroup>
  <ItemGroup>
    <None Include="appsettings.json" />
    <None Include="Web.config" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\lib\Fw\src\FwCore\FwCore.csproj" />
    <ProjectReference Include="..\..\lib\Fw\src\FwStandard\FwStandard.csproj" />
    <ProjectReference Include="..\RentalWorksWebLibrary\WebLibrary.csproj" />
  </ItemGroup>
  <Target Name="MyPreCompileTarget" BeforeTargets="Build">
    <!--<Exec Command="npm install" />-->
  </Target>
  <!--copies the Xml documentation file-->
  <Target Name="CopyDocumentationFile" AfterTargets="ComputeFilesToPublish">
    <ItemGroup>
      <ResolvedFileToPublish Include="@(FinalDocFile)" RelativePath="@(FinalDocFile->'%(Filename)%(Extension)')" />
    </ItemGroup>
  </Target>
  <Target Name="AfterClean"> 
    <RemoveDir Directories="$(MSBuildProjectDirectory)\bin" /> 
    <RemoveDir Directories="$(MSBuildProjectDirectory)\obj" /> 
  </Target> 
</Project>
