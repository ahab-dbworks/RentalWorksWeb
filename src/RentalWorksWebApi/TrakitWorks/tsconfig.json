{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2015",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./@types/**/*.d.ts",
    "./Libraries/Fw/**/*.ts",
    "./scripts/**/*.ts",
    "./Source/**/*.ts",
    "./DefaultApplicationConfig.ts"
  ]
}
