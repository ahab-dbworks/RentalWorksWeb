{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6",
      "es7"
    ]
  },
  "include": [
    "Libraries/**/*.ts",
    "scripts/**/*.ts",
    "Source/**/*.ts"
  ]
}
