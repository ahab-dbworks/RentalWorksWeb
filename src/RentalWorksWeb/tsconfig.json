{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "chart.js",
      "codemirror",
      "handlebars",
      "jquery",
      "jqueryui",
      "materialize-css",
      "mustache",
      "pickadate"
    ],
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
